import sqlite3

def create_db():
    conn = sqlite3.connect('users.db')
    c = conn.cursor()
    c.execute('''
    CREATE TABLE IF NOT EXISTS users (
        id TEXT PRIMARY KEY,
        password TEXT NOT NULL
    )
    ''')
    c.execute('INSERT INTO users (id, password) VALUES (?, ?)', ('123', '123'))
    conn.commit()
    conn.close()

if __name__ == "__main__":
    create_db()

