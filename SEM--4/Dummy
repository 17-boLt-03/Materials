@app.route('/check', methods=['POST'])
def check():
    reg_no = request.form['regNo']
    password = request.form['dob']
    
    conn = sqlite3.connect('users.db')
    c = conn.cursor()
    c.execute('SELECT * FROM users WHERE id = ? AND password = ?', (reg_no, password))
    user = c.fetchone()
    conn.close()
    
    if user:
        return render_template_string('''
        <!DOCTYPE html>
        <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Attendance Checker</title>
            <style>
                body {
                    font-family: 'Arial', sans-serif;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 100vh;
                    background: linear-gradient(135deg, #FFAFBD, #ffc3a0);
                    margin: 0;
                }
                .container {
                    background: #fff;
                    padding: 30px;
                    border-radius: 10px;
                    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
                    max-width: 400px;
                    width: 100%;
                    text-align: center;
                }
                h1 {
                    margin-bottom: 20px;
                    font-size: 24px;
                    color: #333;
                }
                .attendance-table {
                    width: calc(100% - 20px);
                    border-collapse: collapse;
                    margin-top: 20px;
                    margin: 0 10px;
                    box-sizing: border-box;
                }
                .attendance-table th, .attendance-table td {
                    padding: 12px;
                    border: 1px solid #ddd;
                    text-align: center;
                    font-size: 14px;
                }
                .attendance-table th {
                    background: #f8f9fa;
                }
            </style>
        </head>
        <body>
            <div class="container">
                <h1>Daily Attendance</h1>
                <table class="attendance-table">
                    <thead>
                        <tr>
                            <th>Total Hours</th>
                            <th>Attend Period</th>
                            <th>%</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>100</td>
                            <td>100</td>
                            <td>100%</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </body>
        </html>
        ''')
    else:
        return redirect(url_for('index'))

if __name__ == "__main__":
    app.run(debug=True)